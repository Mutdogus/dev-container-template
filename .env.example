# GitHub MCP Server Environment Configuration

# Authentication Method (oauth, pat, app)
GITHUB_AUTH_TYPE=oauth

# OAuth Configuration (Required for OAuth)
GITHUB_CLIENT_ID=your_oauth_client_id_here
GITHUB_CLIENT_SECRET=your_oauth_client_secret_here

# Personal Access Token (Required for PAT)
GITHUB_PERSONAL_ACCESS_TOKEN=your_pat_here

# GitHub App Configuration (Required for GitHub App)
GITHUB_APP_ID=your_app_id_here
GITHUB_APP_PRIVATE_KEY=your_app_private_key_here
GITHUB_APP_INSTALLATION_ID=your_installation_id_here

# Server Configuration
NODE_ENV=development
GITHUB_DEFAULT_REPO=username/repo-name
SERVER_TIMEOUT=30000
SERVER_PORT=3000

# Rate Limiting
GITHUB_RATE_LIMIT_BUFFER=100
GITHUB_MAX_RETRIES=3

# Logging
LOG_LEVEL=info
DEBUG=mcp:*

# Cache Configuration
CACHE_ENABLED=true
CACHE_TTL=300
CACHE_MAX_SIZE=1000

# Batch Processing
BATCH_ENABLED=true
BATCH_SIZE=10
BATCH_DELAY=1000

# Security
CORS_ORIGIN=http://localhost:3000
SESSION_SECRET=your_session_secret_here

# Monitoring
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=true

# VS Code Testing Configuration

# VS Code versions to test (comma-separated)
VSCODE_VERSIONS=stable,insiders

# Docker configuration
DOCKER_HOST=unix:///var/run/docker.sock
DOCKER_TIMEOUT=300000

# Test configuration
TEST_TIMEOUT=30000
TEST_PARALLEL=true
TEST_RETRY_COUNT=3

# Performance thresholds
CONTAINER_STARTUP_TIMEOUT_MS=300000
EXTENSION_LOADING_TIMEOUT_MS=30000
MEMORY_WARNING_THRESHOLD_GB=2

# VS Code extension paths
EXTENSION_DIR=.vscode/extensions
TEST_EXTENSION_DIR=tests/vscode/fixtures/extensions

# Output directories
TEST_RESULTS_DIR=test-results
COVERAGE_DIR=coverage
REPORTS_DIR=reports

# Debug mode
DEBUG_TESTS=false
VERBOSE_TEST_OUTPUT=false