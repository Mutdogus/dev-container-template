# GitHub MCP Server Environment Configuration

# Authentication Method (oauth, pat, app)
GITHUB_AUTH_TYPE=oauth

# OAuth Configuration (Required for OAuth)
GITHUB_CLIENT_ID=your_oauth_client_id_here
GITHUB_CLIENT_SECRET=your_oauth_client_secret_here

# Personal Access Token (Required for PAT)
GITHUB_PERSONAL_ACCESS_TOKEN=your_pat_here

# GitHub App Configuration (Required for GitHub App)
GITHUB_APP_ID=your_app_id_here
GITHUB_APP_PRIVATE_KEY=your_app_private_key_here
GITHUB_APP_INSTALLATION_ID=your_installation_id_here

# Server Configuration
NODE_ENV=development
GITHUB_DEFAULT_REPO=username/repo-name
SERVER_TIMEOUT=30000
SERVER_PORT=3000

# Rate Limiting
GITHUB_RATE_LIMIT_BUFFER=100
GITHUB_MAX_RETRIES=3

# Logging
LOG_LEVEL=info
DEBUG=mcp:*

# Cache Configuration
CACHE_ENABLED=true
CACHE_TTL=300
CACHE_MAX_SIZE=1000

# Batch Processing
BATCH_ENABLED=true
BATCH_SIZE=10
BATCH_DELAY=1000

# Security
CORS_ORIGIN=http://localhost:3000
SESSION_SECRET=your_session_secret_here

# Monitoring
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=true