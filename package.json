{
  "name": "vscode-testing-integration",
  "version": "1.0.0",
  "description": "VS Code testing integration for dev container template",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "build": "tsc && esbuild src/server/index.ts --bundle --platform=node --format=esm --outfile=dist/server.js --external:@modelcontextprotocol/sdk --external:@octokit/rest --external:@octokit/plugin-throttling --external:@octokit/plugin-retry",
    "start": "node dist/server.js",
    "dev": "tsx watch src/server/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:vscode": "node scripts/test-vscode.sh",
    "test:container": "node scripts/run-container-tests.sh",
    "validate:env": "node scripts/validate-environment.sh",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "@octokit/rest": "^20.0.2",
    "@octokit/plugin-throttling": "^8.1.3",
    "@octokit/plugin-retry": "^7.0.4",
    "dotenv": "^16.3.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "@types/node": "^20.9.0",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "@vscode/test-electron": "^2.3.8",
    "@vscode/extension-test-runner": "^0.0.7",
    "@types/vscode": "^1.85.0",
    "dockerode": "^3.3.5",
    "@types/dockerode": "^3.3.21",
    "esbuild": "^0.19.8",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "tsx": "^4.6.0",
    "typescript": "^5.3.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "vscode",
    "testing",
    "dev-container",
    "automation",
    "container-validation"
  ],
  "author": "",
  "license": "MIT"
}
